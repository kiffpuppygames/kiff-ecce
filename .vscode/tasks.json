{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "zig",
            "args": 
            [
                "build",
                "-Doptimize=Debug",
                "-freference-trace",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
            },
            "problemMatcher": [ "$zig" ]
        },
        {
            "label": "build tests",
            "type": "shell",
            "command": "zig",
            "args": [
                "test",
                "-Doptimize=Debug",
                "-femit-bin=zig-out/bin/test",
                "--test-no-exec",
                "src/tests.zig"             
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",                
                //"isDefault": true
            },
            "problemMatcher": [ "$zig" ]
        }
    ]
}